<div class="main_posts_edit">
        <div class="post_container">
            <div class="posts_edit_item">
                <%= form_tag("/routes/#{@route.id}/update") do %>
                    <div class="form">
                        <div class="form_body">
                            <% @route.errors.full_messages.each do |message| %>
                                <div class="form_error">
                                <%= message %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <p>画像</p>
                    <input class = "posts-new-image" name="image" type="file">
                    <textarea class="posts_edit_content" name="route_name"><%= @route.route_name%></textarea>
                            
                    <input class ="input_button" type="submit" value="保存">
                <%end%>
            </div>
        </div>
    </div>